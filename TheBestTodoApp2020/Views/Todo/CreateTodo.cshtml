@model TheBestTodoApp2020.Models.CreateTodoViewModel

@{
    ViewData["Title"] = "Create a todo";
}

<h1>Create a todo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTodo">
            <input type="hidden" asp-for="TodoListId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
                <p>The description of this todo: what do you need to do?</p>
            </div>
            @*<div class="form-group">
                    <label asp-for="ToBeDone" class="control-label"></label>
                    <input asp-for="ToBeDone" class="form-control" />
                    <span asp-validation-for="ToBeDone" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
                <p>Write any comments for this todo.</p>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Done" /> @Html.DisplayNameFor(model => model.Done)
                </label>
                <p>Check this box if the todo is already done.</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

