@model IEnumerable<Library.Models.Todo>

@{
    ViewData["Title"] = "Edit Todo list";
}

<h1>@ViewData["TodoListTitle"]</h1>

<p>
    <a asp-action="CreateTodo" asp-route-todoListId=@ViewData["TodoListId"].ToString()>Create new Todo in this List</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Check/uncheck
            </th>
            <th>
                Todo
                @*@Html.DisplayNameFor(model => model.Description)*@
            </th>
            <th>
                Done?
                @*@Html.DisplayNameFor(model => model.Done)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a class="btn btn-success" asp-action="CheckTodo" asp-route-todoId=@item.Id.ToString()>v</a>
            </td>
            <td>
                <a asp-action="EditTodo" asp-route-todoId=@item.Id.ToString()>@item.Description</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Done)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                <a class="btn btn-danger" asp-action="DeleteTodo" asp-route-todoId=@item.Id.ToString() asp-route-todoListId=@ViewData["TodoListId"].ToString()>Delete Todo</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-action="Index" asp-controller="Todo">Return to My Todo Lists</a>
