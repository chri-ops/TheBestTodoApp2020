@model TheBestTodoApp2020.Models.CheckTodoViewModel

@{
    ViewData["Title"] = "CheckTodo";
}

<h1>CheckTodo</h1>

<h4>CheckTodoViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckTodo">
            <input type="hidden" asp-for="TodoId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Done" /> @Html.DisplayNameFor(model => model.Done)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

